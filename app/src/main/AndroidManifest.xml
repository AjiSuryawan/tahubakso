        <activity android:name="com.example.tahubakso.tahuproject.ViewDetailNota" />
        <activity android:name="com.example.tahubakso.UI.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>