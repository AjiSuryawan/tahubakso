<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tahuproject.MainMenu">

    <Button
        android:id="@+id/btnaddorder"
        android:text="ADD ORDER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btngetorder"
        android:text="Lihat Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btndownloadData"
        android:text="DOWNLOAD DATA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnsearchdata"
        android:text="CARI DATA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>